# Example environment variables for fpf-sync
# Copy to .env and fill in as needed

# MCP server
PORT=3333
FPF_READONLY=1
FPF_DATA_DIR=./data
FPF_DOCS_DIR=./yadisk

# MCP SSE server security settings
FPF_MAX_LOG_SIZE=104857600        # 100MB - max log file size before rotation
FPF_MAX_LOG_ROTATIONS=5           # number of rotated log files to keep
FPF_RATE_LIMIT=100                # requests per minute per IP address
FPF_MAX_BODY_SIZE=1048576         # 1MB - max request body size in bytes
FPF_ALLOWED_HOSTS=localhost,127.0.0.1  # allowed Host headers (DNS rebinding protection)

# Industry research
GOOGLE_AI_API_KEY=
GEMINI_MODEL=gemini-2.5-pro

# YaDisk sync
YANDEX_PUBLIC_URL=
YANDEX_PUBLIC_PATH=
YANDEX_TARGET_NAME=
YANDEX_DEST_FILENAME=
YANDEX_MAX_BYTES=10485760

{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": ["ESNext", "DOM"],

    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,

    "strict": true,
    "skipLibCheck": true,

    "types": ["bun-types", "node"]
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "dist", "out", "coverage", "yadisk"]
}
